<div class="title">
  <h5>Les plantes de mon <%= @balcony.title %></h5>
</div>
<div class="remarks">
  <h6>Remarques</h6>
  <p>Attention au géranium qui ne supporte pas de trop grosses variations de températures</p>
</div>

<div class="grid-plants mb-5">
  <% @balcony_plants.each do |balcony_plant| %>
    <% if balcony_plant.planted? %>
      <%= render "planted_plant", balcony_plant: balcony_plant %>
    <% else %>
      <%= render "not_planted_plant", balcony_plant: balcony_plant%>
    <% end %>
  <% end %>
</div>
