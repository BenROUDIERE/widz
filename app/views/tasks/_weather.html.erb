
<div class="weather">
  <div class="card">
    <div class="sky">
      <img src="<%= @data.weather.first.icon_uri %>" alt="">
    </div>  
    
    <div class="weather-today">
      <div>
        <h3 class="weather-desc temp"><%= @data.main.temp_c.to_i %>°C</h3>
        <h3 class="weather-desc desc"><%= @data.weather.first.description %></h3>
      </div>
      
      <div class="forecast">
        <h3>Max <%= @minimum_temp %>°C</h3>
        <h3>Min <%= @maximum_temp %>°C</h3>
        <h3>Nuages <%= @data.clouds.all %>%</h3>
      </div>
    </div>

  </div>
</div> 